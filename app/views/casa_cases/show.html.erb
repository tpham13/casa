<%= link_to "Back", casa_cases_path %>

<div class="row">
  <div class="col-sm-12 form-header">
    <h1><%= @casa_case.decorate.transition_aged_youth_icon %> CASA Case Details</h1>
    <%- if policy(:case_contact).new? & @casa_case.active? %>
      <%= link_to t(".new_contact"),
                  new_case_contact_path(case_contact: {casa_case_id: @casa_case.id}),
                  class: "btn btn-primary casa-case-button" %>
    <%- end %>
    <% if @casa_case.active? %>
      <%= link_to 'Edit Case Details', edit_casa_case_path(@casa_case), class: "btn btn-primary casa-case-button" %>
    <% end %>
    <% if @casa_case.has_transitioned? %>
      <%= link_to 'Emancipation', casa_case_emancipation_path(@casa_case), class: "btn btn-primary casa-case-button" %>
    <% end %>
  </div>
</div>

<div class="card card-container">
  <div class="card-body">
    <% if !@casa_case.active %>
      <%= render "inactive_case", casa_case: @casa_case %>
    <% end %>
    <p>
    <h6><strong>Case number:</strong> <%= @casa_case.case_number %></h6>
    </p>
    <% if @casa_case.has_hearing_type? %>
      <p>
        <h6><strong>Hearing Type:</strong> <%= @casa_case.hearing_type_name %></h6>
      </p>
    <% end %>

    <% if @casa_case.has_judge_name? %>
      <p>
        <h6><strong>Judge:</strong> <%= @casa_case.judge_name %></h6>
      </p>
    <% end %>

    <p>
    <h6><strong>Transition Aged Youth:</strong> <%= @casa_case.decorate.transition_aged_youth %></h6>
    </p>

    <p>
    <h6><strong>Next Court Date:</strong> <%= l @casa_case.court_date, format: :day_and_date, default: '' %></h6>
    </p>

    <p>
    <h6><strong>Court Report Due
      Date:</strong> <%= l @casa_case.court_report_due_date, format: :day_and_date, default: '' %></h6>
    </p>

    <p>
    <h6><strong>Court Report Status:</strong> <%= @casa_case.decorate.court_report_submission %></h6>
    </p>

    <% unless @casa_case.court_report_not_submitted? %>
      <% if @casa_case.court_report_submitted? && @casa_case.court_reports.attached? %>
        <%= link_to 'Click to download', rails_blob_path(@casa_case.latest_court_report, disposition: 'attachment') %>
      <% end %>
      <p>
        <h6><strong>Court Report Submitted Date:</strong> <%= @casa_case.decorate.court_report_submitted_date %></h6>
      </p>
    <% end %>

    <div>
      <h6><strong>Assigned Volunteers:</strong></h6>
      <% policy_scope(@casa_case.assigned_volunteers).each_with_index do |volunteer, index| %>
        <% if current_user.volunteer? %>
          <p><%= volunteer.display_name %></p>
        <% else %>
          <p><%= link_to "#{volunteer.display_name} ", edit_volunteer_path(volunteer) %></p>
        <% end %>
      <% end %>
      <br>

      <div class="text-right mb-2">
        <%= link_to "Download All", casa_case_path(params[:id], format: :csv) , class: "btn btn-success" %>
      </div>

      <div>
          <%= render partial: "case_contacts/case_contact", collection: @casa_case.decorate.case_contacts_ordered_by_occurred_at.grab_all(current_user), as: :contact %>
      </div>
    </div>
  </div>
</div>
